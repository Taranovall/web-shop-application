<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <context-param>
        <param-name>captchaHandler</param-name>
        <param-value>context</param-value>
    </context-param>
    <context-param>
        <param-name>available.locales</param-name>
        <param-value>uk, it, en</param-value>
    </context-param>
    <context-param>
        <param-name>default.locale</param-name>
        <param-value>en</param-value>
    </context-param>
    <context-param>
        <param-name>locale.storage</param-name>
        <param-value>cookie</param-value>
    </context-param>
    <context-param>
        <param-name>cookie.storage.time</param-name>
        <param-value>180</param-value>
    </context-param>

</web-app>
